DROP DATABASE IF EXISTS AUTO_SALES;
CREATE DATABASE AUTO_SALES;

USE AUTO_SALES;


CREATE TABLE INVENTORY (
CAR_Stock_Num INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Car_Make VARCHAR(50),
Car_Model VARCHAR(50),
Car_Year INT,
Car_Price INT,
Car_Mileage INT,
Car_BodyType CARCHAR(50),
Car_Condition VARCHAR(50),
Car_Color VARCHAR(50)
);

CREATE TABLE LOGIN (
Login_ID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Login_Username varchar(50),
User_Password varchar(10)
);

CREATE TABLE EMPLOYEE(
Emp_ID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
Emp_Name VARCHAR(20),
Emp_email varchar(30),
Emp_phone INT,
Emp_Role VARCHAR(30),
Login_ID INT,
FOREIGN KEY (Login_ID) REFERENCES LOGIN (Login_ID)
);

CREATE TABLE EMPLOYEE_INVENTORY(
ID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
FOREIGN KEY (Emp_ID) REFERENCES EMPLOYEE (Emp_ID),
FOREIGN KEY (CAR_Stock_Num) REFERENCES INVENTORY (CAR_Stock_Num)
);
