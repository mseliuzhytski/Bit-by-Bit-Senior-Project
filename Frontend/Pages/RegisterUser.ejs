      <center> <h2> Register New User </h2> </center>  
      <center><p>
        Password Requirements: <br>
        At least 1 number, 1 uppercase, 1 lowercase, <br>
        and must be more than 8 characters long.</center>

    </p> </center>
    <form id="loginForm" action="/register" method="POST">   
        <div class="container">     
            <fieldset>
                <label>Username</label>
                <input type="text" placeholder="Enter Username" name="username"  id="username" required>  
                <br><br>

                <!-- Password is set to meet the requirements above -->
                <label>Password</label>
                <input type="password" placeholder="Enter Password" name="password" id="password" 
                required minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9]).{8,}$">      
                <br><br>

                <label>First Name</label>
                <input type="text" placeholder="Enter First Name" name="fName"  id="fName" required>       
                <br><br>

                <label>Last Name</label>
                <input type="text" placeholder="Enter Last Name" name="lName"  id="lName" required>       
                <br><br>

                <center>
                <center><label>Role</label></center>
                <br>
                <select name="Role" id="role">
                    <option value="Employee">Employee</option>
                    <option value="Admin">Admin</option>
                </select>
                </center>     
                  
                <br><br>

                <button type="submit" id="register">Register</button> 
            </fieldset>      
        </div>   
    </form>   
